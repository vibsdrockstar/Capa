<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context=".Homepage">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        style="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/homepage"
        android:text="Homepage"/>

    <ImageView
        android:id="@+id/icar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/homepage"
        android:layout_centerHorizontal="true"
        android:src="@drawable/carloc" />

    <Button
        android:id="@+id/b_userhist"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="246dp"
        android:onClick="openInfo"
        android:text=" User History" />



    <Button
        android:id="@+id/b_hist"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="180dp"
        android:onClick="openInfo"
        android:text="History" />

    <Button
        android:id="@+id/b_urg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="242dp"
        android:layout_marginBottom="137dp"
        android:onClick="openInfo"
        android:text="Urgent" />
    <Button
        android:id="@+id/b_review"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="185dp"
        android:onClick="openInfo"
        android:layout_alignRight="@id/b_urg"
        android:text="Review" />

    <Button
        android:id="@+id/b_feature"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/b_urg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="-221dp"
        android:layout_marginBottom="254dp"
        android:onClick="openInfo"
        android:text="Features" />

    <Button
        android:id="@+id/b_usertype"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="96dp"
        android:onClick="openInfo"
        android:text="Usertype" />
    <Button
        android:id="@+id/b_usermessages"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="136dp"
        android:onClick="openInfo"
        android:text="MessageUsers" />

    <Button
        android:id="@+id/b_mobileuser"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="7dp"
        android:onClick="openInfo"
        android:text="MobileUsers" />

    <Button
        android:id="@+id/b_join"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:onClick="openInfo"
        android:text="JoinUs" />

    <Button
        android:id="@+id/b_remarks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp"
        android:onClick="openInfo"
        android:text="UserComments" />

    <Button
        android:id="@+id/b_payhere"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="262dp"
        android:layout_marginBottom="3dp"
        android:onClick="openInfo"
        android:text="Click To Pay" />
    <Button
        android:id="@+id/b_alert"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="53dp"
        android:onClick="openInfo"
        android:text="Alert" />



</RelativeLayout>
