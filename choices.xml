<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarDetails">
    <EditText
    android:id="@+id/et_nameop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Enter Name"
    android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/et_houseadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Enter House Address"
        android:inputType="textCapSentences"
        android:layout_below="@id/et_nameop"/>
    <EditText
        android:id="@+id/et_carname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Enter Car Name"
        android:inputType="textPersonName"
        android:layout_below="@id/et_houseadd"/>
    <EditText
        android:id="@+id/et_carno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Enter no of seats "
        android:inputType="number"
        android:layout_below="@id/et_carname"/>
    <EditText
        android:id="@+id/et_famno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Enter family members number"
        android:inputType="number"
        android:layout_below="@id/et_carno"/>

    <Button
        android:id="@+id/b_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:text="ADD" />
    <Button
        android:id="@+id/b_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_add"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="167dp"
        android:text="DELETE" />
    <Button
        android:id="@+id/b_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_del"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="167dp"
        android:text="VIEW" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#ffffff"
        android:id="@+id/tv_large"
        android:layout_below="@+id/b_view"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/bnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:onClick="openNewPage"
        android:text="NEXT"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    </ScrollView>

</RelativeLayout>
